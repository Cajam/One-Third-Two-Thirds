<h1><%= @project.title %></h1>
<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @project.text %>
</p>

<p>
  <strong>Total Hours:</strong>
  <%= @project.hoursleft %>
</p>

<p>
  <strong>Total Minutes:</strong>
  <%= @project.minutesleft %>
</p>
<br>
  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Hours</th>
      <th>Minutes</th>
    </tr>

    <% @project.subtasks.each do |subtask| %>
      <tr>
        <td><%= subtask.title %></td>
        <td><%= subtask.description %></td>
        <td><%= subtask.subhours %></td>
        <td><%= subtask.subminutes %></td>
        <% if current_user %>
        <td><%= link_to "Edit", edit_project_path(project) %></td>
        <td><%= link_to "Delete", project_path(project), method: :delete, data: {confirm: "Are you sure you want to delete this?"} %></td>
        <% end %>
    <% end %>
  </table>

<% if current_user %>
<%= link_to "New Project", new_project_path %>
<%= link_to "Add New Subtask", new_project_subtask_path(@project) %>
<% end %>
<%= link_to "Back", projects_path %>


<div id='countDown'>
<div id='time'>
<input type='text' id='hours' size='2'/>;
Hours
<input type='text' id='minutes' size='2'/>;
Minutes
<input type='text' id='seconds' size='2'/>
Seconds
</div>
