<%= form_for @project do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :hours_allotted %><br>
    <%= f.text_field :hoursleft %>
  </p>

  <p>
    <%= f.label :minutes_allotted %><br>
    <%= f.text_field :minutesleft %>
  </p>

  <%= f.hidden_field :author, value: current_user %>

  <p>
    <%= f.submit %>
  </p>

<% end %>
